#!/bin/sh

for cmd in awesome-client awesome2-client; do
	if which $cmd >/dev/null; then
		sep=".";
		while true; do
			if test -S ~/.awesome_ctl.0; then
				time=`date "+%b %-d, %H$sep%M"`
				echo "0 widget_tell main clock text $time" | $cmd
			fi
			if test "$sep" = "."; then
				sep=":"
			else
				sep="."
			fi
			sleep 1
		done
	fi
done
