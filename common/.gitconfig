[user]
	name = Keith Gaughan
	email = k@stereochro.me
[color]
	branch = auto
	diff = auto
	status = auto
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = cyan
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	ci = commit
	co = checkout
	df = diff
	br = branch
	st = status -sb
	ready = rebase -i @{u}
	purr = pull --rebase
	last = log -1 --stat
	cp = cherry-pick
	cl = clone
	unstage = reset HEAD --
	dc = diff --cached
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	uncommit = reset --soft 'HEAD^'
	aggressive = !"git fsck --unreachable; git reflog expire --expire=0 --all; git repack -a -d -l; git prune; git gc --aggressive"
	pull-all = !"git pull --recurse-submodules --rebase && git submodule update --init --recursive"
	rebase-against-master = !"git checkout master && git pull --rebase && git checkout @{-1} && git rebase master"
	rebase-against-root = !"git rebase -i $(git merge-base --all master HEAD)"
	merge-into-master = !"git checkout master && git merge @{-1}"
	diff-master = diff -D master...
	sync-submodules = submodule update --init --recursive
[credential]
	helper = cache --timeout=3600
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
	keeptemporaries = false
	keepbackups = false
[diff]
	tool = vimdiff
	algorithm = patience
[difftool]
	prompt = false
[http]
	sslVerify = true
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore_global
	trustctime = false
	editor = vim
	pager = less -F
	autocrlf = input
[status]
	submoduleSummary = true
[include]
	path = ~/.gitconfig.local
