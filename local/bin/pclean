#!/bin/sh

PORTS_DIR=${PORTS_DIR:-/usr/ports}

if [ ! -d $PORTS_DIR ]; then
	echo No ports directory!
	exit 1
fi

for cat in $PORTS_DIR/*; do
	if [ -f $cat/Makefile ]; then
		echo $cat
		for port in $cat/*; do
			if [ -d $port/work ]; then
				echo Removing $port/work
				rm -rf $port/work
			fi
		done
	fi
done
