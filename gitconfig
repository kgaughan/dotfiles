[user]
	name = Keith Gaughan
	email = k@stereochro.me
[color]
	ui = true
[alias]
	ci = commit
	co = checkout
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	uncommit = reset --soft 'HEAD^'
	aggressive = !"git fsck --unreachable; git reflog expire --expire=0 --all; git repack -a -d -l; git prune; git gc --aggressive"
	pull-all = !"git pull --recurse-submodules; git submodule update --init --recursive"
	diff-master = diff -D origin/master..
[credential]
	helper = cache --timeout=3600
[diff]
	tool = meld
	algorithm = patience
[http]
	sslverify = false
[push]
	default = simple
